<div id="highlight-project">
    {{#if highlighted}}
    <h2>Projet mis en avant</h2>
        {{#each highlighted}} 
            <div>
                <h3>{{projectName}}</h3>
                <a href="project/{{projectName}}"><img src="../image/{{projectName}}/{{imagePath}}" alt="image {{projectName}}"></a>
            </div>
        {{/each}}
    {{/if}}
</div>
<div id="project">
    <h2>Projets</h2>
    {{#each projects}}
        <div>
            <h3>{{projectName}}</h3>
            <a href="project/{{projectName}}"><img src="../image/{{projectName}}/{{imagePath}}" alt="image {{projectName}}"></a>
        </div>
    {{/each}}
</div>